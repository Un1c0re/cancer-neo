---
import { Image } from 'astro:assets';
import BackImage from '../assets/back.png';
// 1. Свойство frontmatter для доступа к frontmatter страницы и прочим данным
const { frontmatter } = Astro.props;
---

<html>
  <head>
    <title>Все о НЭО</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/cancer-neo/styles/global.css" />
  </head>
  <body class="flex flex-col items-center justify-between gap-10">
    <header class="article-header w-full h-16 px-10 py-4 rounded-b-lg grid grid-cols-3 items-top">
      <div class="text-2xl text-start col-span-1">
        <a href="/cancer-neo">
          <img src="/cancer-neo/back.png" alt="Назад" 
            width="36"
            height="36"
            decoding="async"
            loading="lazy"
          />
        </a>
      </div>
      <div class="text-3xl text-center col-span-1 text-nowrap">
        <h1>Все о НЭО</h1>
      </div>
    </header>
    <main class="article-reader gap-10 w-11/12 p-6 text-justify">
      <div class="flex flex-col items-center self-center">
        <h1 class="font-bold text-3xl">{frontmatter.title}</h1>
        <h1 class="font-bold text-xl">{frontmatter.excerpt}</h1>
      </div>
      <slot />
    </main>
    <footer class="h-16 flex flex-col items-center">
      <p>© 2024 СурГУ</p>
    </footer>
  </body>
</html>

<style>
  body {
    background: rgb(226, 247, 254);
  }

  .article-header {
    background: rgb(96, 140, 193);
    color: white;
  }
  .article-reader {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    background: #fff;
    border-radius: 20px;
    box-shadow: 3px 5px 10px 0 rgba(0, 0, 0, 0.2);
  }
</style>
