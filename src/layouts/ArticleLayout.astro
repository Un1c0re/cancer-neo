---
// 1. Свойство frontmatter для доступа к frontmatter страницы и прочим данным
const { frontmatter } = Astro.props;
---

<html>
    <head>
        <title>Все о НЭО</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/cancer-neo/styles/global.css">
    </head>
    <body class=" bg-cyan-100 flex flex-col items-center justify-between gap-10">
        <header class=" text-sky-800 h-16 flex self-start justify-between px-10 py-4">
            <h1 class=" font-bold text-4xl">Все о НЭО</h1>
        </header>
        <main class="article-reader gap-10 w-11/12 p-6 text-justify">
            <div class="flex flex-col items-center self-center">
                <h1 class="font-bold text-3xl">{frontmatter.title}</h1>
                <h1 class="font-bold text-xl">{frontmatter.excerpt}</h1>
            </div>
            <slot />
        </main>
        <footer class="h-16 flex flex-col items-center">
            <p>© 2024 СурГУ</p>
        </footer>
    </body>
</html>

<style>
    .article-reader {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        background: #fff;
        border-radius: 20px;
        box-shadow: 3px 5px 10px 0 rgba(0, 0, 0, 0.2);
    }
</style>