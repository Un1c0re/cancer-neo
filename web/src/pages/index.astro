---
import MainLayout from "../layouts/MainLayout.astro";
import ArticlesSection from "../components/ArticlesSection.astro";
import type { ArticleProps } from '../utils/types';
import type { MarkdownInstance } from "astro";

const allArticles: MarkdownInstance<ArticleProps>[] = await Astro.glob("./articles/*.md");
const allSortedArticles = allArticles.sort((a, b) => a.frontmatter.slug.localeCompare(b.frontmatter.slug));

---

<MainLayout>
  <ArticlesSection allArticles={allSortedArticles} />
</MainLayout>
